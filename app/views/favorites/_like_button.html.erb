<% if current_user.like?(micropost) %>
    <%= form_with(model:current_user.favorites.find_by(micropost_id: micropost.id), url: :likes, method: :delete, local: true) do |f| %>
        <%= hidden_field_tag :micropost_id, micropost.id %>
        <%= f.submit 'Dislike', class: 'btn btn-warning btn-sm' %>
    <% end %>
<% else %>
    <%= form_with(model:current_user.favorites.build , url: :likes, local: true) do |f| %>
        <%= hidden_field_tag :micropost_id, micropost.id %>
        <%= f.submit 'Like', class: 'btn btn-primary btn-sm' %>
    <% end %> 
<% end %>    
    
    
            